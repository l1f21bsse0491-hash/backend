{
  "info": {
    "name": "Saher Flow Solutions - Company Management",
    "description": "Complete API collection for managing companies and domains",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{admin_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "company_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('admin_token', response.data.token);",
                  "        console.log('Admin token saved:', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@saherflow.com\",\n  \"password\": \"Admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login as admin to get authentication token"
          }
        }
      ]
    },
    {
      "name": "Company Management",
      "item": [
        {
          "name": "Get All Companies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/company",
              "host": ["{{base_url}}"],
              "path": ["api", "company"]
            },
            "description": "Get all active companies (Public endpoint)"
          }
        },
        {
          "name": "Get Company by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/company/{{company_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "company", "{{company_id}}"]
            },
            "description": "Get specific company details (Admin only)"
          }
        },
        {
          "name": "Create New Company",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.company._id) {",
                  "        pm.collectionVariables.set('company_id', response.data.company._id);",
                  "        console.log('Company ID saved:', response.data.company._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"TechCorp Solutions\",\n  \"domains\": [\"techcorp.com\", \"techcorp.net\"],\n  \"description\": \"Leading technology solutions provider\",\n  \"contactEmail\": \"admin@techcorp.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/company",
              "host": ["{{base_url}}"],
              "path": ["api", "company"]
            },
            "description": "Create a new company (Admin only)"
          }
        },
        {
          "name": "Update Company",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"TechCorp Solutions Updated\",\n  \"domains\": [\"techcorp.com\", \"techcorp.net\", \"techcorp.org\"],\n  \"description\": \"Updated description for leading technology solutions provider\",\n  \"contactEmail\": \"contact@techcorp.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/company/{{company_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "company", "{{company_id}}"]
            },
            "description": "Update existing company (Admin only)"
          }
        },
        {
          "name": "Deactivate Company",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/company/{{company_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "company", "{{company_id}}"]
            },
            "description": "Deactivate a company (Admin only)"
          }
        },
        {
          "name": "Check Domain Availability",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/company/check-domain/techcorp.com",
              "host": ["{{base_url}}"],
              "path": ["api", "company", "check-domain", "techcorp.com"]
            },
            "description": "Check if a domain is allowed for registration (Public)"
          }
        }
      ]
    },
    {
      "name": "Test Registration with New Domain",
      "item": [
        {
          "name": "Register User with Approved Domain",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john@techcorp.com\",\n  \"company\": \"TechCorp Solutions\",\n  \"password\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Test registration with newly added company domain"
          }
        },
        {
          "name": "Register User with Unapproved Domain",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\",\n  \"email\": \"jane@unauthorized.com\",\n  \"company\": \"Unauthorized Corp\",\n  \"password\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Test registration with unauthorized domain (should fail)"
          }
        }
      ]
    },
    {
      "name": "Validation Tests",
      "item": [
        {
          "name": "Create Company - Missing Required Fields",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Corp\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/company",
              "host": ["{{base_url}}"],
              "path": ["api", "company"]
            },
            "description": "Test validation - should fail due to missing domains"
          }
        },
        {
          "name": "Create Company - Invalid Domain Format",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Invalid Domain Corp\",\n  \"domains\": [\"invalid-domain\", \"another.invalid\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/company",
              "host": ["{{base_url}}"],
              "path": ["api", "company"]
            },
            "description": "Test validation - should fail due to invalid domain format"
          }
        },
        {
          "name": "Create Company - Duplicate Name",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Saudi Aramco\",\n  \"domains\": [\"duplicate-test.com\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/company",
              "host": ["{{base_url}}"],
              "path": ["api", "company"]
            },
            "description": "Test validation - should fail due to duplicate company name"
          }
        }
      ]
    }
  ]
}